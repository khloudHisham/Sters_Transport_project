<UserControl x:Class="StersTransport.UI.ValuePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StersTransport.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             PreviewKeyDown="UserControl_PreviewKeyDown"
         
     >


    <Border  Background="#E4E4E4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>

            <Label VerticalAlignment="Center" Margin="10" x:Name="lbl_title"></Label>
            <TextBox HorizontalContentAlignment="Center" Margin="10" Grid.Row="1" x:Name="txt_value" KeyDown="txt_value_KeyDown"></TextBox>
        </Grid>
    </Border>

</UserControl>
