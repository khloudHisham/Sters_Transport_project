                Style="{DynamicResource ResourceKey=StandardCombobox2}" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
               
            </ComboBox>

            <Label Grid.Row="6" Grid.Column="0">Authorization</Label>
