            <DoubleAnimation Storyboard.TargetName="notificationmessage2" 
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)" Duration="0:0:1" From="-400"/>
        </Storyboard>
        <Storyboard x:Key="hideAnimation" >
