<UserControl x:Class="StersTransport.UI.LabelsManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StersTransport.UI"
             mc:Ignorable="d" 
             
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>


        <DataGrid Style="{DynamicResource DataGridStyle1}" CanUserAddRows="False" CanUserDeleteRows="False" AutoGeneratingColumn="dg_AutoGeneratingColumn" x:Name="dg"></DataGrid>
        <Button Template="{DynamicResource ActionButtonBlueTemplate}" Grid.Row="1" Width="100" Click="Button_Click">Save</Button>
    </Grid>
</UserControl>
